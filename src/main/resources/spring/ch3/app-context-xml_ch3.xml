<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="provider" class="ru.smith.ch2.decoupled.HelloWorldMessageProvider"/>
    
    <bean id="constructorConfusion" class="ru.smith.ch3.xml.ConstructorConfusion">
        <constructor-arg type="int">
            <value>90</value>
        </constructor-arg>
    </bean>
    
    <bean id="injectSimple" class="ru.smith.ch3.xml.InjectSimple"
    p:name = "Petrov Maksim"
    p:age = "35"
    p:height="1.92"
    p:programmer = "false"
    p:ageInSeconds = "1241401112">
    </bean>
    
    <bean id="injectSimpleConfig" class="ru.smith.ch3.xml.InjectSimpleConfig">
    </bean>
    
    <bean id="injectSimpleSpel" class="ru.smith.ch3.xml.InjectSimpleSpel"
        p:name="#{injectSimpleConfig.name}"
        p:age="#{injectSimpleConfig.age + 1}"
        p:height="#{injectSimpleConfig.height}"
        p:programmer="#{injectSimpleConfig.programmer}"
        p:ageInSeconds="#{injectSimpleConfig.ageInSeconds}">
    </bean>
    
    <bean id="oracle" name = "wiseworm" class="ru.smith.ch3.other.BookwormOracle">
    </bean>
    
    <bean id="injectRef" class="ru.smith.ch3.xml.InjectRef">
        <!--property name="oracle" ref="oracle"/-->
        <property name="oracle" ref="wiseworm"/>
    </bean>

    <bean id="lyricHolder" class="ru.smith.ch3.xml.LyricHolder">
    </bean>

    <bean id="injectCollection" class="ru.smith.ch3.xml.CollectionInjection">

        <property name="map">
            <map>
                <entry key="someValue" value="It's a Friday, we finally made it"/>
                <entry key="someBean" value-ref="lyricHolder"/>
            </map>
        </property>
        <property name="properties">
            <props>
                <prop key="firstName">Maksim</prop>
                <prop key="secondName">Petrov</prop>
            </props>
        </property>
        <property name="set">
            <set>
                <value>I can't believe I get to see your face</value>
                <ref bean="lyricHolder"/>
            </set>
        </property>
        <property name="list">
            <list>
                <value>You've been working and I've been waiting</value>
                <ref bean="lyricHolder"/>
            </list>
        </property>
    </bean>
</beans>